{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "paths": {
      
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
